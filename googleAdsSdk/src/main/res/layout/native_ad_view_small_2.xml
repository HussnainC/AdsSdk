<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/unifiedNativeAdView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nativeSmallAd2bgcolor">

    <com.google.android.material.card.MaterialCardView
        style="@style/adCornorCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/nativeSmallAd2bgcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ad_advertiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_1sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="AD"
                    android:textColor="@color/nativeSmallAd2TextColor"
                    android:textSize="@dimen/_8sdp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1sp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:src="@drawable/baseline_info_24"
                    app:tint="@color/gray" />
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/ad_call_to_action_new"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/nativeSmallAd2ButtonColor"
                android:gravity="center"
                android:text="DOWNLOAD"
                android:textColor="@color/nativeSmallAd2ButtonTextColor"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_15sdp"
                app:rippleColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ad_app_icon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ad_headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:textColor="@color/nativeSmallAd2TextColor"

                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ad_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:maxLines="2"
                            android:textColor="@color/nativeSmallAd2TextColor"

                            android:textSize="@dimen/_9sdp"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/ad_body_2"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:maxLines="2"
                android:textColor="@color/nativeSmallAd2TextColor"

                android:textSize="@dimen/_9sdp"
                android:visibility="visible" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</com.google.android.gms.ads.nativead.NativeAdView>
